#include <stdio.h>
int sum(int num) {
    if (num == 0) {
        return 0;
    } else {
        return (num % 10) + sum(num / 10);
    }
}
int main() {
    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    int result = sum(number);
    printf("Sum of digits: %d\n", result);
    return 0;
}
